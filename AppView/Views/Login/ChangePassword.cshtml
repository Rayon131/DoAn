@model AppData.TaiKhoann

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Royal Hotel - Đổi Mật Khẩu</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: url('/img/slider/view bien.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .login-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .login-box {
            background: rgba(255, 255, 255, 0.7);
            padding: 20px 30px;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }

            .login-box h1 {
                font-size: 24px;
                font-weight: bold;
                color: deepskyblue;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
            }

                .form-group input:focus {
                    outline: none;
                    border-color: #007bff;
                    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
                }

        .btn-signup {
            display: block;
            width: 100%;
            padding: 10px;
            background: deepskyblue;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s;
        }

            .btn-signup:hover {
                background: #0056b3;
            }

        .support {
            margin-top: 20px;
            font-size: 14px;
            color: #ff0000;
        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <div class="login-box">
            <h1>Đổi Mật Khẩu</h1>
            <form asp-action="ChangePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="TaiKhoan">Tài khoản</label>
                    <input asp-for="TaiKhoan" placeholder="Nhập tài khoản" required />
                    <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MatKhau">Mật khẩu hiện tại</label>
                    <input asp-for="MatKhau" type="password" placeholder="Nhập mật khẩu hiện tại" required />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewMatKhau">Mật khẩu mới</label>
                    <input asp-for="NewMatKhau" type="password" placeholder="Nhập mật khẩu mới" required />
                    <span asp-validation-for="NewMatKhau" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-signup">Đổi Mật Khẩu</button>
            </form>
            <div class="form-footer">
                <p>
                    <a asp-area="" asp-controller="Login" asp-action="Login">Đăng nhập</a> |
                    <a asp-area="" asp-controller="ForgotPassword" asp-action="ForgotPassword">Quên mật khẩu?</a>
                </p>
            </div>
        </div>
    </div>
</body>
</html>