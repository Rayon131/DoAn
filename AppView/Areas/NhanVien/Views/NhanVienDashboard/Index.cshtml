@model IEnumerable<AppData.TaiKhoann>
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "~/Areas/NhanVien/Views/Shared/_Layout.cshtml";  // Đảm bảo đường dẫn chính xác đến layout
    var sessionUsername = HttpContextAccessor.HttpContext?.Session.GetString("TaiKhoan");
    var sessionRole = HttpContextAccessor.HttpContext?.Session.GetString("Quyen");
    var currentUser = Model.FirstOrDefault(x => x.TaiKhoan == sessionUsername);
}


@* <div class="content" style="margin-left: 250px; padding: 20px;">
      <h2>hello</h2>
    </div> *@

<style>
    .table-scrollable {
        overflow: unset !important;
    }
</style>

<div class="table-scrollable">
    <div class="">
        <div class="row">
            <div class="bg-image" style="position: relative; padding-bottom:10px; /* width: 1310px;  */ height: 640px; ">
                <img style="width: 100%; height: 100%; object-fit: cover;" src="~/img/slider//view bien.jpg" alt="Xin chào">
                <div class="text-overlay" style="
                            position: absolute;
                            top: 50%;
                            left: 50%;
                            transform: translate(-50%, -50%);
                            color: white;
                            font-size: 36px;
                            font-weight: bold;
                            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
                            text-align: center;
                        ">
                    @if (sessionRole == "nhanvien" && currentUser != null)
                    {
                        <h1 class="text-white">Chào mừng @currentUser.TaiKhoan đến với trang quản trị</h1>
                    }
                </div>
            </div>
        </div>
    </div>
</div>