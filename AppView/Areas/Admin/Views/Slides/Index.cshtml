@model IEnumerable<AppData.Slide>

@{
    ViewData["Title"] = "Danh sách slide";
}




<div class="table-container">

	<table class="table mb-1">
		<thead>
			<tr>
				<th class="text-start">Quản lý slide</th>
			</tr>
		</thead>
	</table>

	<table class="table mb-1">
		<thead>
			@* <tr>
				<th class="text-end">
					<a asp-action="Create" class="btn btn-success btn-create">Thêm Mới</a>
				</th>
			</tr> *@
		</thead>
	</table>

	<div class="table-scrollable">
		<table class="table table-bordered ">
			<thead>
				<tr>
					<th style="color:black" class="text-center">Hình ảnh</th>
					<th style="color:black">Nội dung</th>
					<th style="color:black" class="text-center">Trạng thái</th>
					<th style="color:black" class="text-center">Hành động</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="text-center">
							<img src="~/img/slider/@item.Hinh" alt="Logo" style="max-width: 150px; height: auto;" />
						</td>
						<td style="color:black">@Html.DisplayFor(modelItem => item.NoiDung)</td>
						<td class="text-center">
							@if (item.TrangThai)
							{
								<span class="badge badge-success">Hoạt động</span>
							}
							else
							{
								<span class="badge badge-secondary">Không hoạt động</span>
							}
						</td>
						<td class="text-center">
							<a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ID">
								<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
							</a>
							@* <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">
								<i class="fas fa-trash"></i>
							</a> *@
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<style>
	.btn-create {
		background-color: #17a2b8;
		color: white;
	}

		.btn-create:hover {
			background-color: #138496;
			color: white;
		}
</style>


