@model AppData.AnhChiTiet

@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create" enctype="multipart/form-data" method="post" class=" ">
    <div class="table-container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h8>
                <span class="fas fa-home"> </span> Trang chủ / Loại phòng / Thêm
                mới
            </h8>
        </div>
        <div class="table-scrollable">
            <div class="mt-4">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                    <div class="col-md-6">
                                        <h6>Hình ảnh</h6>
                                        <label for="imageFile" class="control-label">Image</label>
                                        <input type="file" name="imageFile" class="form-control" />
                                        <span asp-validation-for="Anh" class="text-danger"></span>
                                    </div>
									<div class="col-md-6">
										<h6>Loại phòng</h6>
										<div class="form-group">
											<label asp-for="IdLoaiPhong" class="control-label">Room Type</label>
											<select asp-for="IdLoaiPhong" class="form-control" asp-items="ViewBag.IdLoaiPhong"></select>
											<span asp-validation-for="IdLoaiPhong" class="text-danger"></span>
										</div>
									</div>
                                    <div class="col-md-6">
                                        <h6>Trạng thái</h6>
                                        <div class="form-group">
                                            <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                                            <select asp-for="TrangThai" class="form-control">
                                                <option value="true">Hoạt động</option>
                                                <option value="false">Không hoạt động</option>
                                            </select>
                                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Xuất bản</h5>
                                <button type="submit" class="btn btn-primary mb-2">
                                    <i class="fas fa-plus"> </i>
                                    Tạo mới
                                </button>
                                <a asp-action="Index" class="btn btn-danger mb-2">
                                    <i class="fas fa-backward"> </i>
                                    Trở lại
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
