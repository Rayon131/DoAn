@model AppData.AnhChiTiet

@{
    ViewData["Title"] = "Edit";
}
<style >
    label{
        color:black;
    }
</style>
<form asp-action="Edit" enctype="multipart/form-data" method="post" class=" ">
    
        <table class="table mb-1">
            <thead>
                <tr>
                    <th class="text-start">Chỉnh sửa ảnh chi tiết</th>
                </tr>
            </thead>
        </table>

    <div class="table-scrollable">
        <div class="mt-4">
            <div class="row">
                <div class="col-md-8">
                    <input type="hidden" asp-for="Id" />
                    <div class="card">
                        <div class="card-body">

                            <div class="row">
                                
                                <div class="form-group">
                                    <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                                    <select asp-for="TrangThai" class="form-control">
                                        <option value="true">Hoạt động</option>
                                        <option value="false">Không hoạt động</option>
                                    </select>
                                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    <label asp-for="IdLoaiPhong" class="control-label">Loại phòng</label>
                                    <select asp-for="IdLoaiPhong" class="form-control" asp-items="ViewBag.IdLoaiPhong"></select>
                                    <span asp-validation-for="IdLoaiPhong" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Hành động</h5>
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                                <i class="fa fa-save"> </i>
                                Lưu
                            </a>

                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"> </i>
                                Trở lại
                            </a>

                            <label for="imageFile" class="control-label">Hình ảnh</label>
                            <input type="file" name="imageFile" class="form-control mb-2 mt-2" />
                            <span asp-validation-for="Anh" class="text-danger"></span>
                            @if (!string.IsNullOrEmpty(Model.Anh))
                            {
                                <img src="~/img/room-slider/@Model.Anh" alt="Image Detail" class="img-fluid" />
                            }
                            else
                            {
                                <p>Chưa có ảnh</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

