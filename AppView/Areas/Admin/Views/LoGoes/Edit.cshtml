@model AppData.LoGo

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";  // Đảm bảo đường dẫn chính xác đến layout
}



<form asp-action="Edit" enctype="multipart/form-data" method="post" class="">

    <table class="table mb-1">
        <thead>
            <tr>
                <th class="text-start">Chỉnh sửa logo</th>
            </tr>
        </thead>
    </table>

        <div class="table-scrollable">
            <div class="mt-4">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <label class="text-dark" >Ảnh hiện tại</label>
                                        <div class="mb-3">
                                            @if (!string.IsNullOrEmpty(Model.Logo))
                                            {
                                                <img src="~/img/@Model.Logo" alt="Logo" class="img-fluid rounded shadow-sm" />
                                            }
                                            else
                                            {
                                                <p class="text-muted">Chưa có ảnh</p>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        
                                        <input type="file" name="imageFile" class="form-control" />
                                        <span asp-validation-for="Logo" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-12">
                                    <label asp-for="TrangThai" class="control-label text-dark">Trạng thái</label>
                                        <select asp-for="TrangThai" class="form-control">
                                            <option value="true">Hoạt động</option>
                                            <option value="false">Không hoạt động</option>
                                        </select>
                                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Hành động</h5>
                                <button type="submit" class="btn btn-primary mb-2">
                                    <i class="fa fa-save"> </i>
                                    Lưu
                                </button>
                                <a asp-action="Index" class="btn btn-danger mb-2">
                                    <i class="fa fa-arrow-left"> </i>
                                    Trở lại
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}